{
    "name": "isaac/php-code-sniffer-standard",
    "conflict": {
        "isaac/php-code-sniffer": "*"
    },
    "description": "ISAAC PHP_CodeSniffer Standard",
    "authors": [
        {
            "name": "ISAAC",
            "email": "info@isaac.nl",
            "homepage": "https://www.isaac.nl"
        }
    ],
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "require": {
        "php": "~7.3.0 || ~7.4.0 || ~8.0.0 || ~8.1.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "slevomat/coding-standard": "^7.0.19",
        "squizlabs/php_codesniffer": "^3.6.0",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "IsaacCodingStandard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IsaacCodingStandard\\Tests\\": "tests/"
        },
        "files": [
            "vendor/squizlabs/php_codesniffer/autoload.php"
        ]
    },
    "support": {
        "issues": "https://github.com/isaaceindhoven/php-code-sniffer-standard"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
