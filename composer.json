{
    "name": "isaac/php-code-sniffer-standard",
    "conflict": {
        "isaac/php-code-sniffer": "*"
    },
    "description": "ISAAC PHP_CodeSniffer Standard",
    "authors": [
        {
            "name": "ISAAC",
            "email": "info@isaac.nl",
            "homepage": "https://www.isaac.nl"
        }
    ],
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "require": {
        "php": "~7.2.0 || ~7.3.0 || ~7.4.0 || ~8.0.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.5",
        "slevomat/coding-standard": "^6.0",
        "squizlabs/php_codesniffer": "^3.5.0",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "phpstan/phpstan": "^0.12.5",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan-strict-rules": "^0.12.1"
    },
    "autoload": {
        "psr-4": {
            "IsaacCodingStandard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IsaacCodingStandard\\Tests\\": "tests/"
        },
        "files": [
            "vendor/squizlabs/php_codesniffer/autoload.php"
        ]
    },
    "support": {
        "issues": "https://github.com/isaaceindhoven/php-code-sniffer-standard"
    }
}
