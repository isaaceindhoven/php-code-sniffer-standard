<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="isaac-php-code-sniffer">
    <!-- include root folder of project -->
    <file>.</file>
    <!-- exclude paths -->
    <exclude-pattern>./vendor</exclude-pattern>
    <!-- exlude tests assets -->
    <exclude-pattern>/tests/*.inc</exclude-pattern>

    <!-- include all rules in isaac ruleset -->
    <rule ref="ISAAC"/>
</ruleset>
